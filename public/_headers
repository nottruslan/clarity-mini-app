# Заголовки для всех файлов
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Connection: keep-alive

# Заголовки для HTML
/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=0, must-revalidate

# КРИТИЧНО: Явно указываем Content-Type для корневого пути
/
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=0, must-revalidate

# Заголовки для JS файлов в assets (включая vendor чанки)
# КРИТИЧНО: Настройки для предотвращения обрыва соединения
/assets/*.js
  Content-Type: application/javascript; charset=utf-8
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable
  Connection: keep-alive
  X-Content-Type-Options: nosniff
  # Важно для параллельной загрузки чанков
  Accept-Ranges: bytes
  # Увеличиваем таймауты для больших файлов
  Keep-Alive: timeout=300, max=1000
  Vary: Accept-Encoding

# Заголовки для CSS файлов в assets
/assets/*.css
  Content-Type: text/css; charset=utf-8
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable
  Connection: keep-alive
  X-Content-Type-Options: nosniff

# Заголовки для других файлов в assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  Connection: keep-alive

# Заголовки для JavaScript файлов (ES модули)
/*.js
  Content-Type: application/javascript; charset=utf-8
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable
  Connection: keep-alive
  # Важно для надежной загрузки модулей через Cloudflare
  X-Content-Type-Options: nosniff

# Заголовки для CSS файлов
/*.css
  Content-Type: text/css; charset=utf-8
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable

# Заголовки для изображений
/*.png
  Content-Type: image/png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=31536000, immutable

# Заголовки для JSON файлов
/*.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=3600

# Заголовки для Cloudflare RUM (исправляем CORS)
# КРИТИЧНО: Cloudflare RUM использует XMLHttpRequest, нужны правильные заголовки
/cdn-cgi/*
  Cache-Control: no-cache, no-store, must-revalidate
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS, PUT, DELETE
  Access-Control-Allow-Headers: Content-Type, Authorization, X-Requested-With
  Access-Control-Allow-Credentials: true
  Access-Control-Max-Age: 86400
  Vary: Origin, Access-Control-Request-Headers, Access-Control-Request-Method
  Connection: keep-alive

